---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import yourData from "../content/yourData.ts";
import { Image } from "astro:assets";
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-5xl font-bold">Rafiel Taveras</div>
    <div class="text-3xl py-3 font-bold">Web developer and Data Scientist</div>
    <div class="py-2"
    >
      <text class="text-lg">
        <p>Rafiel is a passionate web developer and data scientist specializing in data-driven applications. 
          Proficient in JavaScript, he has professional experience with PHP, Python, Node.js, Docker, React, and Vue. 
          He also works with IoT devices and data engineering.</p>
      </text>
    </div>
    <div class="mt-5 mb-8">
      <div class="flex items-center">
        {yourData.skills.map((skill) => (
          <Image class="ml-2" width={24} height={24} format="webp" src={skill.img} alt={skill.name} />
        ))}
      </div>
    </div>
    <!-- <div class="mt-8">
      <a class="btn" href="/contact"> Contact me!</a>
    </div> -->
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-5">My Work</div>
  </div>

  {yourData.projects.map((project) => (
    <>
      <HorizontalCard
        title={project.title}
        img={project.imageSrc}
        desc={project.para}
        url={project.url}
      />
      <div class="divider my-0"></div>
    </>
  ))}
  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-5">Projects i'm part of</div>
  </div>

  {yourData.projectsParticipations.map((project) => (
    <>
      <HorizontalCard
        title={project.title}
        img={project.imageSrc}
        desc={project.para}
        url={project.url}
      />
      <div class="divider my-0"></div>
    </>
  ))}
</BaseLayout>
